# Zedny LMS - Root Environment Configuration
# Copy this file to .env and update values for your environment
#
# IMPORTANT: Never commit .env to git! Only .env.example is tracked.

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=development

# =============================================================================
# DATABASE (REQUIRED)
# =============================================================================
# PostgreSQL connection string
# Default Docker setup uses port 5433 to avoid conflicts with local PostgreSQL
DATABASE_URL="postgresql://lms_user:lms_password@localhost:5433/lms_db"

# =============================================================================
# REDIS (REQUIRED for background jobs)
# =============================================================================
REDIS_URL="redis://localhost:6379"

# =============================================================================
# AUTHENTICATION (REQUIRED)
# =============================================================================
# JWT Secret - Generate a strong secret: openssl rand -hex 32
# MUST match the JWT_SECRET in services/api/.env
JWT_SECRET="your-super-secret-key-change-in-production"
JWT_EXPIRES_IN="7d"

# =============================================================================
# APPLICATION URLs (REQUIRED)
# =============================================================================
BASE_URL="http://localhost:3000"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:8000"

# =============================================================================
# FILE UPLOADS
# =============================================================================
MAX_FILE_SIZE_MB=600
UPLOAD_DIR="./uploads"

# =============================================================================
# EMAIL (Optional - for notifications)
# =============================================================================
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@yourdomain.com"

# Alternatively, use SMTP directly:
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"

# =============================================================================
# AI FEATURES (Optional)
# =============================================================================
OPENAI_API_KEY="sk-your-openai-api-key"
ENABLE_AI_FEATURES=true

# =============================================================================
# WEB CONFERENCING (Optional)
# =============================================================================
# Zoom Integration
ZOOM_CLIENT_ID="your-zoom-client-id"
ZOOM_CLIENT_SECRET="your-zoom-client-secret"

# BigBlueButton Integration
BBB_URL="https://your-bbb-server.com"
BBB_SECRET="your-bbb-secret"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_MESSAGING=true
ENABLE_GAMIFICATION=true
ENABLE_CERTIFICATES=true

# =============================================================================
# MULTI-TENANCY
# =============================================================================
DEFAULT_TENANT_DOMAIN="localhost"
