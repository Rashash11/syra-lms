# Python Backend Environment Configuration
# Copy this to .env and update values for your environment

# =============================================================================
# DATABASE (REQUIRED)
# =============================================================================
# PostgreSQL connection string
# Format: postgresql+asyncpg://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql+asyncpg://lms_user:lms_password@localhost:5433/lms_db

# =============================================================================
# AUTHENTICATION (REQUIRED)
# =============================================================================
# JWT Secret - MUST match the JWT_SECRET in root .env
# Generate a strong secret: openssl rand -hex 32
JWT_SECRET=your-super-secret-key-change-in-production

JWT_ALGORITHM=HS256
JWT_ISSUER=lms-auth
JWT_AUDIENCE=lms-api
ACCESS_TOKEN_MINUTES=15
REFRESH_TOKEN_DAYS=7
JWT_EXPIRE_MINUTES=10080

# =============================================================================
# CORS (REQUIRED)
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# REDIS (Optional - for background jobs)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENV=development
DEBUG=true

# =============================================================================
# FILE UPLOADS (Optional)
# =============================================================================
UPLOAD_DIR=./public/uploads
MAX_FILE_SIZE_MB=600

# =============================================================================
# EMAIL (Optional - for notifications)
# =============================================================================
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourdomain.com
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587

# =============================================================================
# AI FEATURES (Optional)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
SKIP_RATE_LIMIT=false
