{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "types": [
            "node"
        ],
        "noEmit": true
    },
    "include": [
        "scripts/**/*.ts",
        "scripts/**/*.tsx",
        "prisma/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        ".next"
    ]
}